# Prototype Makefile
#
# File:		Makefile
# Date:		Wed Feb 13 01:14:08 EST 2002
#
# See demonstration Makefile for documentation.
#
# The program for this problem is named:

P = problem_name

.SUFFIXES:
.SUFFIXES: .c .cc .java .p

default:	$P.out

.c:
	rm -f $* core
	gcc -g -o $* $*.c -lm

.cc:
	rm -f $* core
	g++ -g -o $* $*.cc -lm

.p:
	rm -f $* $*.p2c core
	p2c -o $*.p2c $*.p
	gcc -g -o $* -x c $*.p2c -lp2c -lm

.java:
	rm -f $* $*.class core
	javac -g $*.java
	echo >$* '#!/bin/sh'
	echo >>$* "exec `which java` $*"
	chmod a+r *.class
	chmod a+rx $*
#

$P.out:	$P $P.in
	rm -f $P.out core
	chmod a+x . $P
	hpcm_sandbox -cputime 60 \
	             -datasize 4m \
		     -stacksize 4m \
		     -filesize 50k \
		     -watch \
		     $P \
	    <$P.in >$P.out
	@echo ""
	@echo "========== OUTPUT ($P.out)" \
	      "=========="
	@cat $P.out
	@echo "============== END OUTPUT =============="

submit:		$P.out
	hpcm_submit $P

clean:
	rm -f $P $P.class $P.p2c core $P.out


