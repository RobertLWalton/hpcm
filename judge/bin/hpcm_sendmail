#! /bin/sh
#
# Call contestant/bin/hpcm_sendmail with
# <judging_directory>/contest as argument.
#
# File:		hpcm_sendmail
# Author:	Bob Walton <walton@deas.harvard.edu>
# Date:		Mon Mar 25 05:36:36 EST 2002
#
# The authors have placed this program in the public
# domain; they make no warranty and accept no liability
# for this program.
#
# RCS Info (may not be true date or author):
#
#   $Author: hc3 $
#   $Date: 2002/03/25 10:36:01 $
#   $RCSfile: hpcm_sendmail,v $
#   $Revision: 1.2 $

case "$1" in
   "")  ;;
   * )
   	echo "
hpcm_sendmail

    Call contestant/bin/hpcm_sendmail with
    <judging_directory>/contest as argument."

    	exit 1
	;;
esac

contest=""
for jd in . .. ../.. ../../.. ../../../..
do
    if test -r $jd/hpcm_judging.rc
    then
        contest=$jd/contest
	break
    fi
done

if test "$contest" = ""
then
    echo ERROR: Cannot find hpcm_judging.rc.
    exit 1
fi

if test ! -x $contest
then
    echo ERROR: Cannot access $contest
    exit 1
fi

sendmail=../../contestant/bin/hpcm_sendmail
exec `dirname "$0"`/$sendmail $contest
