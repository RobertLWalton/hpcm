#!/bin/sh
#
# Display scoreboard for judge.
#
# File:		scoreboard
# Author:	Bob Walton <walton@deas.harvard.edu>
# Date:		Fri Mar  3 10:50:05 EST 2006
#
# The authors have placed this program in the public
# domain; they make no warranty and accept no liability
# for this program.
#
# RCS Info (may not be true date or author):
#
#   $Author: hc3 $
#   $Date: 2006/03/03 15:59:40 $
#   $RCSfile: scoreboard,v $
#   $Revision: 1.1 $

case "$1" in
     -doc* )
     		echo "
scoreboard [-debug] [-refresh R] \\
           [contest] [page-number] [user]

    Call ../../contestant/bin/scoreboard with arguments
    plus the \`-contest <judging_directory>/contest'
    arguments."

    		exit 1
		;;
esac

contest=""
for jd in . .. ../.. ../../.. ../../../..
do
    if test -r $jd/hpcm_judging.rc
    then
        contest=$jd/contest
	break
    fi
done

if test "$contest" = ""
then
    echo ERROR: Cannot find hpcm_judging.rc.
    exit 1
fi

if test ! -x $contest
then
    echo ERROR: Cannot access $contest
    exit 1
fi

scoreboard=../../contestant/bin/scoreboard
exec `dirname "$0"`/$scoreboard -contest $contest $*
