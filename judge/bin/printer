#! /bin/sh
#
# Display the status of the printers
#
# File:		lpq
# Author:	Bob Walton <walton@deas.harvard.edu>
# Date:		Mon Feb  4 18:13:44 EST 2002
#
# The authors have placed this program in the public
# domain; they make no warranty and accept no liability
# for this program.
#
# RCS Info (may not be true date or author):
#
#   $Author: hc3 $
#   $Date: 2002/02/04 23:16:41 $
#   $RCSfile: printer,v $
#   $Revision: 1.1 $

case "$1" in
   -* )
   	echo "
lpq

    Display the last view lines of the judging_direc-
    tory/contest/printer_jobs file."

    	exit 1
	;;
esac

contest=""
for jd in . .. ../.. ../../.. ../../../..
do
    if test -r $jd/hpcm_judging.rc
    then
        contest=$jd/contest
	break
    fi
done

if test "$contest" = ""
then
    echo ERROR: Cannot find hpcm_judging.rc.
    exit 1
fi

if test ! -x $contest
then
    echo ERROR: Cannot access $contest
    exit 1
fi


# If printer_jobs is readable, display its last
# 10 lines.
#
if test -r ${contest}/printer_jobs
then
    echo ============================= \
	 Recent Printer Jobs \
	 =============================
    tail -10 ${contest}/printer_jobs
    echo ============================= \
	 =================== \
	 =============================
fi

exit 0
