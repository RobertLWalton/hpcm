#
#   $Author: hc3 $
#   $Date: 2000/11/17 03:47:42 $
#   $RCSfile: testproblems,v $
#   $Revision: 1.3 $

case "$1" in
    "" | -* )
	    echo "
testproblems directory ...

    							
    In each directory, this program runs:

    		make clean
		make
    
    Then in a second pass, for each directory this
    program runs:

		diff *.out *.test
		make clean"

	    exit 1
	    ;;
esac

for x in "$@"
do
    (cd $x; make clean; make)
done

for x in "$@"
do
    (cd $x; diff *.out *.test; make clean)
done

exit 0
