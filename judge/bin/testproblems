#
#   $Author: hc3 $
#   $Date: 2000/11/05 17:52:13 $
#   $RCSfile: testproblems,v $
#   $Revision: 1.2 $

case "$1" in
    "" | -* )
	    echo "
testproblems directory ...

    							
    In each directory, this program runs:

    		make clean
		make
		diff *.out *.test
		make clean"

	    exit 1
	    ;;
esac

for x in "$@"
do
    (cd $x; make clean; make; diff *.out *.test; make clean)
done

exit 0
