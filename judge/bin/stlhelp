#!/bin/sh
#
# Display STL api information for judge.
#
# File:		stlhelp
# Author:	Bob Walton <walton@deas.harvard.edu>
# Date:		Sat Sep  9 14:58:40 EDT 2006
#
# The authors have placed this program in the public
# domain; they make no warranty and accept no liability
# for this program.
#
# RCS Info (may not be true date or author):
#
#   $Author: walton $
#   $Date: 2006/09/09 18:58:53 $
#   $RCSfile: stlhelp,v $
#   $Revision: 1.2 $

case "$1" in
     ?* )
     		echo "
stlhelp

    Call hpcm_helper with <judging-directory>/contest/
    stlhelp as argument."

    		exit 1
		;;
esac

contest=""
for jd in . .. ../.. ../../.. ../../../..
do
    if test -r $jd/hpcm_judging.rc
    then
        contest=$jd/contest
	break
    fi
done

if test "$contest" = ""
then
    echo ERROR: Cannot find hpcm_judging.rc.
    exit 1
fi

if test ! -x $contest
then
    echo ERROR: Cannot access $contest
    exit 1
fi

exec hpcm_helper $contest/stlhelp \
		 "STL API documentation displayer"
