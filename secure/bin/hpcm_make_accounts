#! /bin/sh
#
# Make User Accounts (to be executed by root)
#
# File:		hpcm_make_accounts
# Author:	Bob Walton <walton@deas.harvard.edu>
# Date:		Sun Sep 24 11:38:39 EDT 2000
#
# The authors have placed this program in the public
# domain; they make no warranty and accept no liability
# for this program.
#
# RCS Info (may not be true date or author):
#
#   $Author: hc3 $
#   $Date: 2000/09/24 15:30:13 $
#   $RCSfile: hpcm_make_accounts,v $
#   $Revision: 1.3 $

if test "$1" = ""; then
    echo "hpcm_make_accounts contest-directory-name"
    exit 1
fi

if test ! -r $1/secure/passwords; then
    echo cannot read $1/secure/passwords
    echo "Usage: hpcm_make_accounts" \
    	 "contest-directory-name"
    exit 1
fi

for user in ` sed <$1/secure/passwords \
                  -e 's/\(.*\):.*/\1/' `
do
    if test ! -d ~$user; then
    	echo useradd $user
    	useradd $user
    else
    	echo $user already exists
    fi
done

exit 0
