#!/bin/sh -f
#
# Submit a file.
#
# File:		hpcm_submit
# Author:	Bob Walton <walton@deas.harvard.edu>
# Date:		Fri Sep  1 08:38:46 EDT 2000

case "$1" in
    "" | -*)
    		echo hi
		exit 1
		;;
esac

( echo BEGIN $1; \
  cat $1 | sed -e '/^/s//../'; \
  echo END $1 ) \
| mail -s "submit $1" walton $USER
