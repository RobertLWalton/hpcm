#! /bin/sh

user=`id -un`

if test -f ~/.hpcm_contest/who_where; then
    whowhere=`grep "^$user:" ~/.hpcm_contest/who_where`
    who=`echo "$whowhere" | cut -d: -f2`
    where=`echo "$whowhere" | cut -d: -f3`
else
    who="$user"
    where=""
fi

if test -f ~/.hpcm_contest/printer; then
    PRINTER=`cat ~/.hpcm_contest/printer`
fi

if test -w ~/.hpcm_contest/printer-jobs; then
    line="`date`   ***   $user   ***   $where"
    echo "$line" >> ~/.hpcm_contest/printer-jobs
fi

enscript -2r -j -b "\$n|%E  %C  $who($user) at $where|\$% of \$=" \
	-F Courier-Bold14 -f Courier7 -P $PRINTER "$@"

exit 0

