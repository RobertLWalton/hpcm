#! /bin/sh -f

progdir=`dirname "$0"`
libdir="$progdir/../lib"
user=`id -un`

if test -f $libdir/who-where; then
    whowhere=`grep "^$user:" $libdir/who-where`
    who=`echo "$whowhere" | cut -d: -f2`
    where=`echo "$whowhere" | cut -d: -f3`
else
    who="$user"
    where=""
fi

if test -f $libdir/contest-printer; then
    PRINTER=`cat $libdir/contest-printer`
fi

enscript -2r -j -b "\$n|%E  %C  $who($user) at $where|\$% of \$=" \
	-F Courier-Bold12 -f Courier7 -P $PRINTER "$@"

exit 0

