#! /bin/sh -f

user=`id -un`

if test -f ~/.hpcm_contest/who-where; then
    whowhere=`grep "^$user:" ~/.hpcm_contest/who-where`
    who=`echo "$whowhere" | cut -d: -f2`
    where=`echo "$whowhere" | cut -d: -f3`
else
    who="$user"
    where=""
fi

if test -f ~/.hpcm_contest/PRINTER; then
    PRINTER=`cat ~/.hpcm_contest/PRINTER`
fi

enscript -j -2r -b "\$n|%E  %C  $who($user) at $where|\$% of \$=" \
	-F Courier-Bold14 -f Courier10 -P $PRINTER "$@"

exit 0
# enscript -g -2r -f Courier10 --margins 70:70:: -P$PRINTER $argv:q
