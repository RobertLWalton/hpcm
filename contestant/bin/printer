#! /bin/sh

if test -f ~/.hpcm_contest/printer; then
    PRINTER=`cat ~/.hpcm_contest/printer`
fi

if test -r ~/.hpcm_contest/printer-jobs; then
    echo ==================== \
	 Recent Printer Jobs \
	 ====================
    tail -10 ~/.hpcm_contest/printer-jobs
    echo ==================== \
	 =================== \
	 ====================
fi

if test -x /bin/lpq; then
    /bin/lpq -l -P$PRINTER
else
    /usr/bin/lpq -l -P$PRINTER
fi

exit $?
