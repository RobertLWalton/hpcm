#!/bin/sh -f
#
# Display scoreboard.
#
# File:		scoreboard
# Author:	Bob Walton <walton@deas.harvard.edu>
# Date:		Sun Sep 17 21:50:27 EDT 2000
#
# The authors have placed this program in the public
# domain; they make no warranty and accept no liability
# for this program.
#
# RCS Info (may not be true date or author):
#
#   $Author: hc3 $
#   $Date: 2000/09/18 02:24:18 $
#   $RCSfile: scoreboard,v $
#   $Revision: 1.2 $

time=30

case "$1" in
    [1-9] )
	if test ! -r ~/.hpcm_contest/scoreboard.$1
	then
	    echo cannot read \
	         ~/.hpcm_contest/scoreboard.$1
	    exit 1
	fi

	while test 1 = 1
	do
	    clear
	    cat ~/.hpcm_contest/scoreboard.$1
	    sleep $time
	done
	;;
    "" )
	if test ! -r ~/.hpcm_contest/scoreboard.1
	then
	    echo cannot read \
	         ~/.hpcm_contest/scoreboard.1
	    exit 1
	fi
	
	while test 1 = 1
	do
	    for i in 1 2 3 4
	    do
		if test -r ~/.hpcm_contest/scoreboard.$i
		then
		    clear
		    cat ~/.hpcm_contest/scoreboard.$i
		    sleep $time
		fi
	    done
	done
	;;
    * )
    	echo "
scoreboard [page]

    Displays each page of the scoreboard for $time sec-
    conds and then repeats, if no page argument given.
    Otherwise just displays the page given page, and
    refreshes the display every $time seconds."
    	exit 1
	;;
esac

exit 0
