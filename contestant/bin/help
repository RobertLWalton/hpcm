#!/bin/sh
#
# Display help information.
#
# File:		help
# Author:	Bob Walton <walton@deas.harvard.edu>
# Date:		Sun Nov 12 06:40:45 EST 2000
#
# The authors have placed this program in the public
# domain; they make no warranty and accept no liability
# for this program.
#
# RCS Info (may not be true date or author):
#
#   $Author: hc3 $
#   $Date: 2000/11/12 11:45:26 $
#   $RCSfile: help,v $
#   $Revision: 1.6 $

case "$1" in
     -doc* )
     		echo "
help [topic]

    Displays the help information for the given topic.
    If the topic is not given, it defaults to \`this_
    contest'.

    This program actually displays a readable file named
    ~/.hpcm_contest/helpN/topic, where N is the first of
    1, 2, 3, or 4 for which the named file is readable."
    		exit 1
		;;
     "")
     		item=this_contest
    		;;
     *)
		item=$1
		;;
esac

for i in 1 2 3 4
do
    if test -r ~/.hpcm_contest/help$i/$item
    then
	less ~/.hpcm_contest/help$i/$item
    	exit 0
    fi
done

echo cannot read \
     '~/.hpcm_contest/help[1234]'/$item

exit 1
