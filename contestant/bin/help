#!/bin/sh -f
#
# Display help information.
#
# File:		help
# Author:	Bob Walton <walton@deas.harvard.edu>
# Date:		Sun Sep 17 21:50:27 EDT 2000
#
# The authors have placed this program in the public
# domain; they make no warranty and accept no liability
# for this program.
#
# RCS Info (may not be true date or author):
#
#   $Author: hc3 $
#   $Date: 2000/09/26 11:46:03 $
#   $RCSfile: help,v $
#   $Revision: 1.4 $

case "$1" in
     "")
     		item=this_contest
    		;;
     *)
		item=$1
		;;
esac

for i in 1 2 3 4
do
    if test -r ~/.hpcm_contest/help$i/$item.help
    then
	less ~/.hpcm_contest/help$i/$item.help
    	exit 0
    fi
done

echo cannot read \
     '~/.hpcm_contest/help[1234]'/$item.help

exit 1
